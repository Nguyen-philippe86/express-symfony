{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'Add Address'}) }}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Add Address</h3>
                            </div>
                            <div class="content">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>FullName</th>
                                            <th>Address</th>
                                            <th>Phone</th>
                                            <th>City</th>
                                            <th>Postal</th>
                                            <th>Country</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for address in addresses %}
                                        <tr>
                                            <td>{{ address.id }}</td>
                                            <td>{{ address.fullName }}</td>
                                            <td>{{ address.address }}</td>
                                            <td>{{ address.phone }}</td>
                                            <td>{{ address.city }}</td>
                                            <td>{{ address.postal }}</td>
                                            <td>{{ address.country }}</td>
                                            <td>
                                                <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                                                <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a href="{{ path('address_new') }}">Create new</a>
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
