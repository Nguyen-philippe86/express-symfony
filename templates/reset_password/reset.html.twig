{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe - Express.com{% endblock %}

{% block body %}
    {{ include("partials/title_section.html.twig", {'name':'Réinitialisation de votre mot de passe'}) }}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Réinitialisation de votre mot de passe</h3>
                            </div>
                            <div class="content">
                                {{ form_start(resetForm) }}
                                    {{ form_row(resetForm.plainPassword) }}
                                    <button class="btn btn-fill-out btn-block">Réinitialisé mon mot de passe</button>
                                {{ form_end(resetForm) }}
                            <div class="form-note text-center">Vous n'avez pas encore de compte ? <a href="{{ path('app_register')}}">Créer un compte</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
